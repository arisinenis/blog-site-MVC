    <form asp-action="SignUp" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger">@TempData["Message"]</div>
        <div class="form-outline mb-4">
            <label asp-for="UserRegister.Email" class="form-label" for="form3Example3cg" style="color:white;">Your Email</label>
            <input asp-for="UserRegister.Email" type="email" id="form3Example3cg" class="form-control form-control-lg" />
            <span asp-validation-for="UserRegister.Email" class="text-danger"></span>
        </div>

        <div class="form-outline mb-4">
            <label asp-for="UserRegister.Password" class="form-label" for="form3Example4cg" style="color:white;">Password</label>
            <input asp-for="UserRegister.Password" type="password" id="form3Example4cg" class="form-control form-control-lg" />
            <span asp-validation-for="UserRegister.Password" class="text-danger"></span>
        </div>

        <div class="form-outline mb-4">
            <label asp-for="UserInformation.FirstName" class="form-label" for="form3Example1cg" style="color:white;">Your First Name</label>
            <input asp-for="UserInformation.FirstName" type="text" id="form3Example1cg" class="form-control form-control-lg" />
            <span asp-validation-for="UserInformation.FirstName" class="text-danger"></span>
        </div>

        <div class="form-outline mb-4">
            <label asp-for="UserInformation.LastName" class="form-label" for="form3Example1cg" style="color:white;">Your Last Name</label>
            <input asp-for="UserInformation.LastName" type="text" id="form3Example1cg" class="form-control form-control-lg" />
            <span asp-validation-for="UserInformation.LastName" class="text-danger"></span>
        </div>

        <div class="form-outline mb-4">
            <label asp-for="UserRegister.UserName" class="form-label" for="form3Example1cg" style="color:white;">Your User Name</label>
            <input asp-for="UserRegister.UserName" type="text" id="form3Example1cg" class="form-control form-control-lg" />
            <span asp-validation-for="UserRegister.UserName" class="text-danger"></span>
        </div>

        <div class="form-outline mb-4">
            <label asp-for="UserInformation.Description" class="form-label form-control form-control-lg" style="color:white;">Description</label>
            <textarea asp-for="UserInformation.Description" id="article-content" cols="250" rows="10" style="color:white;"></textarea>
            <span asp-validation-for="UserInformation.Description" class="text-danger"></span>
        </div>

        <div class="form-outline mb-4">
            <label asp-for="UserInformation.Photo" class="form-label form-control form-control-lg" style="color:white;">Upload photo(jpeg/gif/png):</label>
            <input asp-for="UserInformation.Photo" type="file" accept="image/jpeg,image/gif,image/png" class="form-control" />
            <span asp-validation-for="UserInformation.Photo" class="text-danger"></span>
        </div>

        <input type="submit" value="Create" class="btn btn-primary btn-block btn-activation" />


    </form>

